{
  "development": {
    "use_env_variable": "DB_URL_DEV",
    "host": "DB_HOST",
    "dialect": "postgres"
  },
  "test": {
    "use_env_variable": "DB_URL_TEST",
    "host": "DB_HOST",
    "dialect": "postgres"
  },
  "production": {
    "use_env_variable": "DB_URL_PROD",
    "dialect": "postgres",
    "dialectOptions": {
      "ssl": {
        "require": true,
        "rejectUnauthorized": false
      }
    }
  }
}
